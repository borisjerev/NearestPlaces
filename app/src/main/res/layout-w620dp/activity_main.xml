<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal" >
    <fragment
        android:name="com.borisjerev.ui.LocationListFragment"
        android:id="@+id/LocationListFragment"
        android:layout_weight="@dimen/list_fragment_width"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        />
    <fragment
        android:name="com.borisjerev.ui.LocationMapFragment"
        android:id="@+id/LocationMapFragment"
        android:layout_weight="@dimen/map_fragment_width"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        />
</LinearLayout>
